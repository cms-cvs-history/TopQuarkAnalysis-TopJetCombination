<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<MVATrainer>

        <general>
                <option name="id">TtSemiLepJetCombMVATrainer</option>
                <option name="trainfiles">train_%1$s%2$s.%3$s</option>
        </general>

        <input id="input">

                <var name="deltaThetaHadQHadQBar"   	multiple="false" optional="false"/>
                <var name="deltaThetaHadWHadB"   	multiple="false" optional="false"/>
                <var name="deltaRLepBLepton"   		multiple="false" optional="false"/>
                <var name="deltaThetaHadTopLepTop"   	multiple="false" optional="false"/>
                <var name="massHadW"   			multiple="false" optional="false"/>
                <var name="massHadTop"   		multiple="false" optional="false"/>
                <var name="massLepW"   			multiple="false" optional="false"/>
                <var name="massLepTop"   		multiple="false" optional="false"/>
                <var name="deltaMassHadTopLepTop"   	multiple="false" optional="false"/>
                <var name="sumBTag1HadBLepB"   		multiple="false" optional="false"/>

        </input>

        <processor id="norm" name="ProcNormalize">
                <input>

                 	<var source="input" name="deltaThetaHadQHadQBar"/>   							
                 	<var source="input" name="deltaThetaHadWHadB"/>   							
                 	<var source="input" name="deltaRLepBLepton"/>   							
                 	<var source="input" name="deltaThetaHadTopLepTop"/>							
                 	<var source="input" name="massHadW"/>   							
                 	<var source="input" name="massHadTop"/>   							
                 	<var source="input" name="massLepW"/>   							
                 	<var source="input" name="massLepTop"/>   							
             		<var source="input" name="deltaMassHadTopLepTop"/>   
                        <var source="input" name="sumBTag1HadBLepB"/>

                </input>
                <config>
                        <pdf/>
                        <pdf/>
                        <pdf/>
                        <pdf/>
                        <pdf/>
                        <pdf/>
                        <pdf/>
                        <pdf/>
                        <pdf/>
                        <pdf/>
 
                </config>
                <output>
                        <var name="var1"/>
                        <var name="var2"/>
                        <var name="var3"/>
                        <var name="var4"/>
                        <var name="var5"/>
                        <var name="var6"/>
                        <var name="var7"/>
                        <var name="var8"/>
                        <var name="var9"/>
                        <var name="var10"/>
                        
                </output>
        </processor>

	<processor id="rot" name="ProcMatrix">
		<input>
                        <var source="norm" name="var1"/>
                        <var source="norm" name="var2"/>
                        <var source="norm" name="var3"/>
                        <var source="norm" name="var4"/>
                        <var source="norm" name="var5"/>
                        <var source="norm" name="var6"/>
                        <var source="norm" name="var7"/>
                        <var source="norm" name="var8"/>
                        <var source="norm" name="var9"/>
                        <var source="norm" name="var10"/>
		</input>
		<config>
			<fill signal="true" background="true"/>
		</config>
		<output>
			<var name="rot1"/>
			<var name="rot2"/>
			<var name="rot3"/>
			<var name="rot4"/>
			<var name="rot5"/>
			<var name="rot6"/>
			<var name="rot7"/>
			<var name="rot8"/>
			<var name="rot9"/>
			<var name="rot10"/>
		</output>
	</processor>

	<processor id="likelihood" name="ProcLikelihood">
		<input>
                        <var source="norm" name="var1"/>
                        <var source="norm" name="var2"/>
                        <var source="norm" name="var3"/>
                        <var source="norm" name="var4"/>
		</input>
		<config>
			<sigbkg smooth="3"/>
			<sigbkg smooth="3"/>
			<sigbkg smooth="3"/>
			<sigbkg smooth="3"/>
		</config>
		<output>
			<var name="discriminator"/>
		</output>
	</processor>

        <output>
                <var source="likelihood" name="discriminator"/>
        </output>

</MVATrainer>
